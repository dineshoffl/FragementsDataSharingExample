<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_second_fragment"
        android:text="fragment2"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/btn_fragment2"
        android:text="Click fragment 2"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_second_fragment"
        android:layout_height="wrap_content">

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/btn2_fragment2"
        android:text="Click2 fragment 2"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fragment2"
        android:layout_height="wrap_content">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>